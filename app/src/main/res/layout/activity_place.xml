<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.place.PlaceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:background="@color/backgroundCardsDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="6dp">

        <ImageButton
            android:id="@+id/backButton"
            android:background="@color/backgroundCardsDark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/back"
            android:src="@drawable/arrow_left"/>

        <ToggleButton
            android:id="@+id/toggleFavourite"
            android:background="@drawable/toggle_favourite_image"
            android:textOff=""
            android:textOn=""
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutInScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundCardsLight">

            <TextView
                android:id="@+id/namePlace"
                android:gravity="center_vertical"
                android:text="@string/placeName"
                android:textColor="@color/mainTextColor"
                android:textSize="30sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/water"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/waterIcon"
                app:layout_constraintBottom_toBottomOf="@+id/namePlace"
                app:layout_constraintEnd_toStartOf="@+id/weather"
                app:layout_constraintStart_toEndOf="@+id/namePlace"
                app:layout_constraintTop_toTopOf="@+id/namePlace"
                app:srcCompat="@drawable/water_blue" />

            <TextView
                android:id="@+id/tempWater"
                android:gravity="center_horizontal"
                android:text="@string/tempC"
                android:textColor="@color/mainTextColor"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tempAir"
                app:layout_constraintEnd_toEndOf="@+id/water"
                app:layout_constraintStart_toStartOf="@+id/water"
                app:layout_constraintTop_toBottomOf="@+id/water" />

            <ImageView
                android:id="@+id/weather"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/water"
                app:layout_constraintStart_toEndOf="@+id/water"
                app:layout_constraintTop_toTopOf="@+id/water"
                android:contentDescription="@string/weatherIcon"
                app:srcCompat="@drawable/sun" />

            <TextView
                android:id="@+id/tempAir"
                android:gravity="center_horizontal"
                android:text="@string/tempC"
                android:textColor="@color/mainTextColor"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/weather"
                app:layout_constraintStart_toStartOf="@+id/weather"
                app:layout_constraintTop_toBottomOf="@+id/weather" />

            <TextView
                android:id="@+id/currents"
                android:text="@string/currents"
                android:textColor="@color/mainTextColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
