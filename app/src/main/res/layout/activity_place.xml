                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageWater"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/textPlaceName"
                app:layout_constraintEnd_toStartOf="@+id/imageWeather"
                app:layout_constraintTop_toTopOf="@+id/textPlaceName"
                android:contentDescription="@string/water_icon"
                app:srcCompat="@drawable/water_blue" />

            <TextView
                android:id="@+id/textTempWater"
                android:gravity="center"
                android:text="@string/tempC"
