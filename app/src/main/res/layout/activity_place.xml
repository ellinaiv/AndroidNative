                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/text4Hours"
                app:layout_constraintStart_toEndOf="@+id/text4Hours" />

            <ImageView
                android:id="@+id/forecast_1hour"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="@+id/text1Hour"
                app:layout_constraintStart_toStartOf="@+id/text1Hour"
                app:layout_constraintTop_toBottomOf="@+id/text1Hour"
                android:layout_marginTop="8dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/imageForecast2Hours"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/forecast_1hour"
                app:layout_constraintEnd_toEndOf="@+id/text2Hours"
                app:layout_constraintStart_toStartOf="@+id/text2Hours"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/imageForecast3Hours"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageForecast2Hours"
                app:layout_constraintEnd_toEndOf="@+id/text3Hours"
                app:layout_constraintStart_toStartOf="@+id/text3Hours"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/cloud" />

            <ImageView
                android:id="@+id/imageForecast4Hours"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageForecast3Hours"
                app:layout_constraintEnd_toEndOf="@+id/text4Hours"
                app:layout_constraintStart_toStartOf="@+id/text4Hours"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/imageForecast5Hours"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageForecast4Hours"
                app:layout_constraintEnd_toEndOf="@+id/text5Hours"
                app:layout_constraintStart_toStartOf="@+id/text5Hours"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/cloud" />

            <TextView
                android:id="@+id/textTemp1Hour"
                android:gravity="center"
                android:text="25&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/forecast_1hour"
                app:layout_constraintStart_toStartOf="@+id/forecast_1hour"
                app:layout_constraintTop_toBottomOf="@+id/forecast_1hour" />

            <TextView
                android:id="@+id/textTemp2Hours"
                android:gravity="center"
                android:text="23&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp1Hour"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast2Hours"
                app:layout_constraintStart_toStartOf="@+id/imageForecast2Hours" />

            <TextView
                android:id="@+id/textTemp3Hours"
                android:gravity="center"
                android:text="20&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp2Hours"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast3Hours"
                app:layout_constraintStart_toStartOf="@+id/imageForecast3Hours" />

            <TextView
                android:id="@+id/textTemp4Hours"
                android:gravity="center"
                android:text="21&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp3Hours"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast4Hours"
                app:layout_constraintStart_toStartOf="@+id/imageForecast4Hours" />

            <TextView
                android:id="@+id/textTemp5Hours"
                android:gravity="center"
                android:text="20&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp4Hours"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast5Hours"
                app:layout_constraintStart_toStartOf="@+id/imageForecast5Hours" />

            <TextView
                android:id="@+id/textLongForecast"
                android:text="@string/place_long_forecast"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="@+id/textHourForecast"
                app:layout_constraintTop_toBottomOf="@+id/textTemp1Hour" />

            <TextView
                android:id="@+id/textDate1Day"
                android:gravity="center"
                android:text="21/6"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="@+id/text1Hour"
                app:layout_constraintStart_toStartOf="@+id/text1Hour"
                app:layout_constraintTop_toBottomOf="@+id/textLongForecast" />

            <TextView
                android:id="@+id/textDate2Days"
                android:gravity="center"
                android:text="22/6"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textDate1Day"
                app:layout_constraintEnd_toEndOf="@+id/text2Hours"
                app:layout_constraintStart_toStartOf="@+id/text2Hours" />

            <TextView
                android:id="@+id/textDate3Days"
                android:gravity="center"
                android:text="23/6"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textDate2Days"
                app:layout_constraintEnd_toEndOf="@+id/text3Hours"
                app:layout_constraintStart_toStartOf="@+id/text3Hours" />

            <TextView
                android:id="@+id/textDate4Days"
                android:gravity="center"
                android:text="24/6"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textDate3Days"
                app:layout_constraintEnd_toEndOf="@+id/text4Hours"
                app:layout_constraintStart_toStartOf="@+id/text4Hours" />

            <TextView
                android:id="@+id/textDate5Days"
                android:gravity="center"
                android:text="25/6"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textDate4Days"
                app:layout_constraintEnd_toEndOf="@+id/text5Hours"
                app:layout_constraintStart_toStartOf="@+id/text5Hours" />

            <ImageView
                android:id="@+id/imageForecast1Day"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="@+id/textDate1Day"
                app:layout_constraintStart_toStartOf="@+id/textDate1Day"
                app:layout_constraintTop_toBottomOf="@+id/textDate1Day"
                android:layout_marginTop="8dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/imageForecast2Days"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageForecast1Day"
                app:layout_constraintEnd_toEndOf="@+id/textDate2Days"
                app:layout_constraintStart_toStartOf="@+id/textDate2Days"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/imageForecast3Days"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageForecast2Days"
                app:layout_constraintEnd_toEndOf="@+id/textDate3Days"
                app:layout_constraintStart_toStartOf="@+id/textDate3Days"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/cloud" />

            <ImageView
                android:id="@+id/imageForecast4Days"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageForecast3Days"
                app:layout_constraintEnd_toEndOf="@+id/textDate4Days"
                app:layout_constraintStart_toStartOf="@+id/textDate4Days"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/imageForecast5Days"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageForecast4Days"
                app:layout_constraintEnd_toEndOf="@+id/textDate5Days"
                app:layout_constraintStart_toStartOf="@+id/textDate5Days"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/cloud" />

            <TextView
                android:id="@+id/textTemp1Day"
                android:gravity="center"
                android:text="25&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast1Day"
                app:layout_constraintStart_toStartOf="@+id/imageForecast1Day"
                app:layout_constraintTop_toBottomOf="@+id/imageForecast1Day" />

            <TextView
                android:id="@+id/textTemp2Days"
                android:gravity="center"
                android:text="23&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp1Day"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast2Days"
                app:layout_constraintStart_toStartOf="@+id/imageForecast2Days" />

            <TextView
                android:id="@+id/textTemp3Days"
                android:gravity="center"
                android:text="20&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp2Days"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast3Days"
                app:layout_constraintStart_toStartOf="@+id/imageForecast3Days" />

            <TextView
                android:id="@+id/textTemp4Days"
                android:gravity="center"
                android:text="21&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp3Days"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast4Days"
                app:layout_constraintStart_toStartOf="@+id/imageForecast4Days" />

            <TextView
                android:id="@+id/textTemp5Days"
                android:gravity="center"
                android:text="20&#176;C"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textTemp4Days"
                app:layout_constraintEnd_toEndOf="@+id/imageForecast5Days"
                app:layout_constraintStart_toStartOf="@+id/imageForecast5Days" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTemp1Day">

                <TextView
                    android:id="@+id/textDirections"
                    android:padding="6dp"
                    android:text="@string/place_select_route_type"
                    android:textColor="@color/mainTextColor"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/buttonWalk"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textDirections"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/place_button_walk"
                    android:scaleType="fitXY"
                    android:src="@drawable/directions_walk"/>

                <ImageButton
                    android:id="@+id/buttonBike"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="6dp"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/buttonWalk"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/place_button_bike"
                    android:scaleType="fitXY"
                    android:src="@drawable/directions_bike"/>

                <ImageButton
                    android:id="@+id/buttonCar"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/buttonBike"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/place_button_car"
                    android:scaleType="fitXY"
                    android:src="@drawable/directions_car"
                    />

