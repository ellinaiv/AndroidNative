                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/forecast_1hour"
                app:layout_constraintStart_toStartOf="@+id/forecast_1hour"
                app:layout_constraintTop_toBottomOf="@+id/forecast_1hour" />

            <TextView
