<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.place.PlaceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTopBar"
        android:background="@color/backgroundCardsDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/buttonBack"
            android:background="@color/backgroundCardsDark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/button_back"
            android:src="@drawable/arrow_left"/>

        <ToggleButton
            android:id="@+id/toggleFavourite"
            android:background="@drawable/favourite_toggle_image"
            android:textOff=""
            android:textOn=""
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/horizontalDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/backgroundBorder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTopBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutInScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundCardsLight">

            <TextView
                android:id="@+id/textPlaceName"
                android:gravity="center_vertical"
                android:text="@string/place_name"
                android:textColor="@color/mainTextColor"
                android:textSize="30sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageWater"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/textPlaceName"
                app:layout_constraintEnd_toStartOf="@+id/imageWeather"
                app:layout_constraintTop_toTopOf="@+id/textPlaceName"
                android:contentDescription="@string/water_icon"
                app:srcCompat="@drawable/water_blue" />

            <TextView
                android:id="@+id/textTempWater"
                android:gravity="center_horizontal"
                android:text="@string/tempC"
                android:textColor="@color/mainTextColor"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textTempAir"
                app:layout_constraintEnd_toEndOf="@+id/imageWater"
                app:layout_constraintStart_toStartOf="@+id/imageWater"
                app:layout_constraintTop_toBottomOf="@+id/imageWater" />

            <ImageView
                android:id="@+id/imageWeather"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageWater"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageWater"
                android:contentDescription="@string/weather_icon"
                app:srcCompat="@drawable/sun" />

            <TextView
                android:id="@+id/textTempAir"
                android:gravity="center_horizontal"
                android:text="@string/tempC"
                android:textColor="@color/mainTextColor"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageWeather"
                app:layout_constraintStart_toStartOf="@+id/imageWeather"
                app:layout_constraintTop_toBottomOf="@+id/imageWeather" />

            <TextView
                android:id="@+id/textCurrents"
                android:text="@string/place_currents"
                android:textColor="@color/mainTextColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                app:layout_constraintStart_toStartOf="@+id/textPlaceName"
                app:layout_constraintTop_toBottomOf="@+id/textTempWater" />

            <TextView
                android:id="@+id/textUV"
                android:text="@string/place_uv"
                android:textColor="@color/mainTextColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/textCurrents"
                app:layout_constraintTop_toBottomOf="@+id/textCurrents" />

            <TextView
                android:id="@+id/textCurrentsResult"
                android:text="Lite"
                android:textColor="#228B22"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textCurrents"
                app:layout_constraintEnd_toStartOf="@+id/buttonInfoCurrents"
                app:layout_constraintTop_toTopOf="@+id/textCurrents" />

            <TextView
                android:id="@+id/textUVResult"
                android:text="Sterk"
                android:textColor="#8B0000"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textUV"
                app:layout_constraintEnd_toEndOf="@+id/textCurrentsResult"
                app:layout_constraintTop_toTopOf="@+id/textUV" />

            <ImageButton
                android:id="@+id/buttonInfoCurrents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:background="@color/backgroundCardsLight"
                app:layout_constraintBottom_toBottomOf="@+id/textCurrentsResult"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textCurrentsResult"
                android:contentDescription="@string/place_button_info_currents"
                android:src="@drawable/info"/>

            <ImageButton
                android:id="@+id/buttonUVInfo"
                android:background="@color/backgroundCardsLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/textUVResult"
                app:layout_constraintStart_toEndOf="@+id/textUVResult"
                app:layout_constraintTop_toTopOf="@+id/textUVResult"
                android:contentDescription="@string/place_button_info_uv"
                android:src="@drawable/info"/>

            <TextView
                android:id="@+id/textForecast"
                android:text="@string/place_forecast"
                android:textColor="@color/mainTextColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                app:layout_constraintStart_toStartOf="@+id/textUV"
                app:layout_constraintTop_toBottomOf="@+id/textUV" />

            <TextView
                android:id="@+id/textHourForecast"
                android:text="@string/place_hour_forecast"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="@+id/textForecast"
                app:layout_constraintTop_toBottomOf="@+id/textForecast" />

            <TextView
                android:id="@+id/text1Hour"
