<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundCardsLight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/aboutAppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:text="Om appen"
                android:textSize="42sp"
                android:textColor="@color/mainTextColor"
                android:background="@color/backgroundCardsDark"
                />

            <TextView
                android:id="@+id/aboutAppText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/aboutAppTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:textSize="12sp"
                android:text="@string/LoremImpsum"
                android:textColor="@color/mainTextColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/aboutAPITitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/aboutAppText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:text="Om API"
                android:textSize="42sp"
                android:textColor="@color/mainTextColor"
                android:background="@color/backgroundCardsDark"
                />

            <TextView
                android:id="@+id/aboutAPIText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/aboutAPITitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:textSize="12sp"
                android:text="@string/LoremImpsum"
                android:textColor="@color/mainTextColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/settingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/aboutAPIText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:text="Innstilinger"
                android:textSize="42sp"
                android:textColor="@color/mainTextColor"
                android:background="@color/backgroundCardsDark"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/seekBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/settingsText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:padding="12dp"
                android:visibility="gone">

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    app:layout_constraintTop_toBottomOf="@id/textTempHigh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    android:progressTint="@color/coldBlue"
                    android:thumbTint="@color/seekThumb"
                    android:progressBackgroundTint="@color/warmRed"
                    android:progressBackgroundTintMode="src_over"
                    />

                <TextView
                    android:id="@+id/textTempMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/mainTextColor"
                    android:translationZ="80dp"
                    app:layout_constraintBottom_toTopOf="@id/seek_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@android:color/white"

                    />


                <TextView
                    android:id="@+id/textTempLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/mainTextColor"
                    app:layout_constraintBottom_toTopOf="@id/seek_bar"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:id="@+id/textTempHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/mainTextColor"
                    app:layout_constraintBottom_toTopOf="@id/seek_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>